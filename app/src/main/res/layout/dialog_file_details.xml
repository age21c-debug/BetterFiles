<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_name_sample"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_marginBottom="24dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:shrinkColumns="1">

            <TableRow android:layout_marginBottom="12dp">
                <TextView
                    android:text="@string/details_type_label"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp"/>
                <TextView
                    android:id="@+id/tvDetailType"
                    android:text="@string/details_type_sample"
                    android:textColor="#111111"
                    android:textSize="14sp"/>
            </TableRow>

            <TableRow android:layout_marginBottom="12dp">
                <TextView
                    android:text="@string/details_size_label"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp"/>
                <TextView
                    android:id="@+id/tvDetailSize"
                    android:text="@string/details_size_sample"
                    android:textColor="#111111"
                    android:textSize="14sp"/>
            </TableRow>

            <TableRow android:layout_marginBottom="12dp">
                <TextView
                    android:text="@string/details_storage_label"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp"/>
                <TextView
                    android:id="@+id/tvDetailStorage"
                    android:text="@string/internal_storage"
                    android:textColor="#111111"
                    android:textSize="14sp"/>
            </TableRow>

            <TableRow android:layout_marginBottom="12dp">
                <TextView
                    android:text="@string/details_date_label"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp"/>
                <TextView
                    android:id="@+id/tvDetailDate"
                    android:text="@string/details_date_sample"
                    android:textColor="#111111"
                    android:textSize="14sp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="@string/details_path_label"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="top"/>

                <TextView
                    android:id="@+id/tvDetailPath"
                    android:text="@string/details_path_sample"
                    android:textColor="#111111"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:singleLine="false"
                    android:inputType="textMultiLine"
                    android:breakStrategy="simple"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>
</ScrollView>
