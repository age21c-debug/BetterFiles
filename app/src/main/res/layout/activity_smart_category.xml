<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBackSmartCategory"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/action_back"
            app:tint="#111111" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/smart_category"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111111" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp"
        android:text="@string/smart_category_subtitle"
        android:textSize="13sp"
        android:textColor="#607D8B" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSmartEntry1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="6dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F3F8FF">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/iconWrap"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/bg_storage_tab_selected">

                            <ImageView
                                android:id="@+id/ivSmartIcon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_android_file"
                                app:tint="#1565C0" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSmartTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/smart_entry_1"
                                android:textColor="#263238"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSmartHeadline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/loading_label"
                                android:textColor="#111111"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSmartSub0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="#607D8B"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvSmartSub1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="#607D8B"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvSmartSub2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="#607D8B"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvSmartPreview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:textColor="#37474F"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tvSmartEmptyTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="#607D8B"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tvSmartEmptyDesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#90A4AE"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSmartBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        android:background="@drawable/bg_storage_tab_selected"
                        android:paddingStart="8dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="2dp"
                        android:text="@string/smart_badge_recommended"
                        android:textColor="#0D47A1"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivSmartInfo"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="2dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/smart_share_source_note"
                        android:src="@android:drawable/ic_dialog_info"
                        app:tint="#546E7A" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSmartEntry2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <FrameLayout
                        android:id="@+id/iconWrap2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_storage_tab_unselected">

                        <ImageView
                            android:id="@id/ivSmartIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_download"
                            app:tint="#2E7D32" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@id/tvSmartTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/smart_entry_2"
                            android:textColor="#263238"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@id/tvSmartHeadline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/loading_label"
                            android:textColor="#111111"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@id/tvSmartSub0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="#607D8B"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@id/tvSmartSub1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#607D8B"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@id/tvSmartSub2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="#607D8B"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@id/tvSmartPreview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textColor="#37474F"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@id/tvSmartEmptyTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#607D8B"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@id/tvSmartEmptyDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#90A4AE"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSmartEntry3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <FrameLayout
                        android:id="@+id/iconWrap3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_storage_tab_unselected">

                        <ImageView
                            android:id="@id/ivSmartIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_file"
                            app:tint="#6A1B9A" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@id/tvSmartTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/smart_entry_3"
                            android:textColor="#263238"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@id/tvSmartHeadline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/loading_label"
                            android:textColor="#111111"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@id/tvSmartSub0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="#607D8B"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@id/tvSmartSub1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#607D8B"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@id/tvSmartSub2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="#607D8B"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@id/tvSmartPreview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textColor="#37474F"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@id/tvSmartEmptyTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#607D8B"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@id/tvSmartEmptyDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#90A4AE"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSmartEntry4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <FrameLayout
                        android:id="@+id/iconWrap4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_storage_tab_unselected">

                        <ImageView
                            android:id="@id/ivSmartIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_image_file"
                            app:tint="#EF6C00" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@id/tvSmartTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/smart_entry_4"
                            android:textColor="#263238"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@id/tvSmartHeadline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/loading_label"
                            android:textColor="#111111"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@id/tvSmartSub0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="#607D8B"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@id/tvSmartSub1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#607D8B"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@id/tvSmartSub2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="#607D8B"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@id/tvSmartPreview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textColor="#37474F"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@id/tvSmartEmptyTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#607D8B"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@id/tvSmartEmptyDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#90A4AE"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>


